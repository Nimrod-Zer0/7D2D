<config>
    <!-- Log with a warning message that mod is loaded (warning simply shows mod path cant be removed because that path doesnt exist) -->
    <remove xpath="/JankMod_Loaded[@modname='NRZ_7JankTweaks'][@filename='\Config\entityclasses.xml']" />

    <!-- Reduce Snake health -->
    <set xpath="/entity_classes/entity_class[@name='animalSnake']/effect_group/passive_effect[@operation='base_set']/@value">5</set>   <!-- Default: 10 -->

    <!-- Reduce Wolf health -->
    <set xpath="/entity_classes/entity_class[@name='animalWolf']/effect_group/passive_effect[@operation='base_set']/@value">55</set>    <!-- Default: 140 -->

    <!-- Reduce DireWolf health -->
    <set xpath="/entity_classes/entity_class[@name='animalDireWolf']/effect_group/passive_effect[@operation='base_set']/@value">125</set>   <!-- Default: 250 -->
    
    <!-- Reduce zombie twirly dog health -->
    <set xpath="/entity_classes/entity_class[@name='animalZombieDog']/effect_group/passive_effect[@operation='base_set']/@value">30</set>   <!-- Default: 100 -->
    
    <!-- Reduce zombie vulture health health -->
    <set xpath="/entity_classes/entity_class[@name='animalZombieVulture']/effect_group/passive_effect[@operation='base_set']/@value">10</set>   <!-- Default: 30 -->

    <!-- Reduce zombie vulture (Rad) health -->
    <set xpath="/entity_classes/entity_class[@name='animalZombieVultureRadiated']/effect_group/passive_effect[@operation='base_set']/@value">35</set>   <!-- Default: 120 -->

    <!-- Add bleeding back into zombie immunity buffs (severely stupid devs made ZOMBIES be able to bleed to death)--> 
    <set xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='Immunity']/@value">sickness;disease;wellness;bleeding</set>

    <!-- Increased chance for zombie to drop loot -->
    <set xpath="/entity_classes/entity_class/property[@name='LootDropProb']/@value">0.1</set>  <!-- Default: 0.02 -->
    
    <!-- Adjust the stun times for a little more variance -->
    <set xpath="/entity_classes/entity_class/property[@name='KnockdownProneStunDuration']/@value">0.045,0.5</set>   <!-- Default: 0.045,0.045 -->
    <set xpath="/entity_classes/entity_class/property[@name='KnockdownKneelStunDuration']/@value">0.5,3.0</set>     <!-- Default: 0.5,1.8 -->

    <!--
    Doesnt seem to do anything      Default: minus 0.65
    ======================================
        <set xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='CrouchYOffsetFP']/@value">-1.5</set>
    -->

    <!-- 
    Increase Head Dismemberment chance
    ==================================
    seems to have no effect reguardless of value/this value is also modified in shotgun ammo but not regular ammo
    zombieTemplateMale
    <set xpath="/entity_classes/entity_class/property[@name='DismemberMultiplierHead']/@value">5</set>
    -->
</config>