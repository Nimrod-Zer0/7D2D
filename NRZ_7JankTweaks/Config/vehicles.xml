<config>
    <!-- Log with a warning message that mod is loaded (warning simply shows mod path cant be removed because that path doesnt exist) -->
    <remove xpath="/JankMod_Loaded[@modname='NRZ_7JankTweaks'][@filename='\Config\vehicles.xml']" />

    <!-- 4x4 Jeep -->
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='motorTorqueMinQ']/@value">2500</set>
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='motorTorqueMaxQ']/@value">5500</set>
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='brakeTorque']/@value">7500</set>
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='upAngleMax']/@value">75</set>			<!-- Default: 90 -->
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='steerRate']/@value">200</set>
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='steerCenteringRate']/@value">140</set>
	<set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='unstickForce']/@value">5</set>			<!-- Default: 1 -->
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='velocityMax']/@value">13,20</set>
    <set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@class='headlight']/property[@name='bright']/@value">1.1</set>

    <!-- Moped -->
    <set xpath="/vehicles/vehicle[@name='vehicleMinibike']/property[@name='upAngleMax']/@value">50</set>	<!-- Default: 70 -->
	<set xpath="/vehicles/vehicle[@name='vehicleMinibike']/property[@name='unstickForce']/@value">3</set>	<!-- Default: 1 -->
	<set xpath="/vehicles/vehicle[@name='vehicleMinibike']/property[@name='velocityMax']/@value">8,12</set>	<!-- Default: 7, 10 -->
    <set xpath="/vehicles/vehicle[@name='vehicleMinibike']/property[@class='headlight']/property[@name='bright']/@value">0.65</set>

    <!-- Motorcycle -->
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='motorTorqueMinQ']/@value">2500</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='motorTorqueMaxQ']/@value">4500</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='brakeTorque']/@value">2500</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='upAngleMax']/@value">75</set>  <!-- 80 -->
	<set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='steerRate']/@value">150</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='steerCenteringRate']/@value">100</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='tiltAngleMax']/@value">30</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='tiltThreshold']/@value">0.01</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='tiltDampening']/@value">0.9</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='tiltDampenThreshold']/@value">20</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='unstickForce']/@value">5</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='velocityMax']/@value">15,22</set>
    <set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@class='headlight']/property[@name='bright']/@value">1.0</set>

    <!-- Bike -->
	<set xpath="/vehicles/vehicle[@name='vehicleBicycle']/property[@name='upAngleMax']/@value">65</set>		<!-- Default: 70 -->
	<set xpath="/vehicles/vehicle[@name='vehicleBicycle']/property[@name='hopForce']/@value">4, .05</set>	<!-- Default: 4, .05 -->
	<set xpath="/vehicles/vehicle[@name='vehicleBicycle']/property[@name='velocityMax']/@value">5.5,8</set>	<!-- Default: 5, 10 -->
</config>