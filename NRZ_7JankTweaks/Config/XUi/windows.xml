<configs>
	<!-- Log with a warning message that mod is loaded (warning simply shows mod path cant be removed because that path doesnt exist) -->
    <remove xpath="/JankMod_Loaded[@modname='NRZ_7JankTweaks'][@filename='\Config\XUi\windows.xml']" />

	<!-- 
		To Do: 

		Possibly condense health, stam, food, water all into 1 small hud element	
	===================================================================================

		this is just here as referance for removeing ui elements in future

	Remove numbers from Stamina and Health Bars.	
	<remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@stat_type='Stamina']/label[@name='TextContent']" />
	<remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@stat_type='Health']/label[@name='TextContent']" />
	-->

	<!-- Remove number from Stealth bar -->	
	<remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@stat_type='Stealth']/label[@name='TextContent']" />

	<!-- Addl Stats Ui (Food/Water)-->
	<insertBefore xpath="/windows/window[@name='HUDLeftStatBars']" >
		<window name="window_7JankMod_menuStatsHUD" width="400" height="200" pos="178,92" controller="HUDStatBar" visible="{statvisible}" anchor="LeftBottom">
			<rect name="rect_playerStats" controller="PlayerStatsWindow">
				<rect name="rect_PlayerStats_Hunger" >
					<!--
					<sprite name="sprite_playerStatsHungerBorder" depth="1" pos="3, -5" width="126" height="32" type="sliced" color="0,0,0,225" />
					<sprite name="sprite_playerStatsHungerBackground" depth="1" pos="4, -4" width="125" height="30" type="sliced" color="0,0,0,128" />
					<sprite name="sprite_playerStatsHungerFill" depth="1" pos="4, -4" width="125" height="30" type="filled" color="52,174,86,192" fill="{playerfoodfill}" />	
					 -->
					<sprite name="sprite_playerStatsHungerBackground" depth="1" pos="4, -4" width="127" height="34" type="sliced" color="0,0,0,250" />
					<sprite name="sprite_playerStatsHungerBorder" depth="1" pos="3, -5" width="126" height="32" type="sliced" color="52,174,86,225" />
					<sprite name="sprite_playerStatsHunger" depth="2" pos="8,-8" style="icon22px" sprite="ui_game_symbol_hunger"/>
					<!--	<label name="label_playerStatsHunger" depth="2" pos="48,-8" width="200" font_size="24" text=" [DECEA3]{playerfood}%[-]" />	-->
					<label name="label_playerStatsHunger" depth="2" pos="48,-8" width="200" font_size="24" text=" [DECEA3]{playerfood}[-]/100" />
				</rect>
				
				<rect name="rect_PlayerStats_Thirst" >
					<!--
						============================================================================================
						since a17.3 the water progress/fill bar no longer works because they changed water hud a bit
						============================================================================================
					<sprite name="sprite_playerStatsThirstBorder" depth="1" pos="3, -42" width="126" height="32" type="sliced" color="0,0,0,192" />	
					<sprite name="sprite_playerStatsThirstBackground" depth="1" pos="4, -41" width="125" height="30" type="sliced" color="0,0,0,128" />	
					<sprite name="sprite_playerStatsThirstFill" depth="1" pos="4, -41" width="125" height="30" type="filled" color="52,137,167,192" fill="{playerwaterfill}" />	
					-->
					<sprite name="sprite_playerStatsThirstBackground" depth="1" pos="4, -41" width="127" height="34" type="sliced" color="0,0,0,250" />
					<sprite name="sprite_playerStatsThirstBorder" depth="1" pos="3, -42" width="126" height="32" type="sliced" color="52,137,167,225" />	-->
					<sprite name="sprite_playerStatsThirst" depth="2" pos="8,-45" style="icon22px" sprite="ui_game_symbol_thirst"/>
					<!--	<label name="label_playerStatsThirst" depth="2" pos="48,-45" width="200" font_size="24" text=" [DECEA3]{playerwater}%[-]" />	-->
					<label name="label_playerStatsThirst" depth="2" pos="48,-45" width="200" font_size="24" text=" [DECEA3]{playerwater}[-]/100" />
				</rect>
			</rect>
		</window>
	</insertBefore>

    <!-- Modify existing Compass Ui -->
	<remove xpath="/windows/window[@name='windowCompass']/sprite[@sprite=''][@color='255,255,255,255']" />
	
	<insertAfter xpath="/windows/window[@name='windowCompass']/texture[@name='compassTexture']" >
		<rect name="rect_compassStats" pos="0,-5">
			<sprite name="sprite_compassStatsBackground" depth="0" pos="48,-39" width="384" height="24" type="sliced" fillcenter="false" color="0,0,0,192" sprite="ui_game_header_fill" />
			
			<sprite name="sprite_compassClock" depth="2" pos="50,-41" size="20,20" sprite="ui_game_symbol_clock" color="*" foregroundlayer="true"/>
			<label name="label_compassDayTime" depth="2" pos="70,-40" width="172" height="24" text="  [DECEA3]{day|always}  {time|always}[-]" font_size="22" effect="outline" />
			
			<rect name="rect_compassMapStats" pos="40,-40" width="400" height="32" controller="MapStats" anchor="CenterTop">		
				<sprite name="sprite_compassTemp" depth="2" pos="142,-1" size="20,20" sprite="ui_game_symbol_temperature" color="*" foregroundlayer="true"/>
				<label name="label_compassTemp" depth="2" pos="162,0" width="172" height="24" text=" [DECEA3]{maptemperature}[-]" font_size="22" effect="outline" />
				
				<sprite name="sprite_compassWind" depth="2" pos="222,-1" size="20,20" sprite="ui_game_symbol_wind" color="*" foregroundlayer="true"/>
				<label name="label_compassWind" depth="2" pos="242,0" width="172" height="24" text=" [DECEA3]{mapwind} MPH[-]" font_size="22" effect="outline" />
				
				<sprite name="sprite_compassElevaytion" depth="2" pos="312,-1" size="20,20" sprite="ui_game_symbol_climb" color="*" foregroundlayer="true"/>
				<label name="label_compassElevation" depth="2" pos="332,0" width="172" height="24" text=" [DECEA3]{mapelevation} M[-]" font_size="22" effect="outline" />
			</rect>
		</rect>
	</insertAfter>
</configs>