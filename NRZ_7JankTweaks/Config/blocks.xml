<configs>
	<!-- Log with a warning message that mod is loaded (warning simply shows mod path cant be removed because that path doesnt exist) -->
    <remove xpath="/JankMod_Loaded[@modname='NRZ_7JankTweaks'][@filename='\Config\blocks.xml']" />

	<!-- Burning barrels should give off heat like campfires do	-->
	<append xpath="/blocks/block[@name='burningBarrelPlayer']">
		<property name="ActiveRadiusEffects" value="buffCampfireAOE(3)"/>
	</append>

	<append xpath="/blocks/block[@name='burningBarrel']">
		<property name="ActiveRadiusEffects" value="buffCampfireAOE(3)"/>
	</append>

	<!--	Explosive Charge	-->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.RadiusEntities']/@value">7</set>	<!-- Default: 5 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.EntityDamage']/@value">1600</set>	<!-- Default: 800 -->

	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.RadiusBlocks']/@value">5</set>		<!-- Default: 5 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.BlockDamage']/@value">3000</set>	<!-- Default: 3000 -->

	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.cloth']/@value">130</set>		<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.earth']/@value">130</set>		<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.glass']/@value">130</set>		<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.metal']/@value">130</set>		<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.organic']/@value">130</set>	<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.stone']/@value">130</set>		<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.wood']/@value">130</set>		<!-- Default: 130 -->
	<set xpath="/blocks/block[@name='tnt']/property[@name='Explosion.DamageBonus.water']/@value">130</set>		<!-- Default: 130 -->

	<!-- Add chance to get brass from hinges and a doorknob back from harvesting -->
	<append xpath="/blocks/block[@name='houseFrontDoor1_v1']">
		<drop event="Harvest" name="resourceDoorKnob" count="0,1" prob="0.35" tag="oreWoodHarvest"/>
		<drop event="Harvest" name="resourceScrapBrass" count="0,2" prob="0.5" tag="oreWoodHarvest"/>
	</append>

	<!-- Add the E pickup action back to wild plants and crops -->	
	<append xpath="/blocks/block[contains(@name, '3Harvest')]">
		<property name="Class" value="CropsGrown"/>
	</append>
	
	<!-- Cave mushroom pickup -->
	<append xpath="/blocks/block[@name='mushroom01']">
		<property name="CanPickup" value="true" param1="foodCropMushrooms"/>
	</append>
</configs>